<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="550.0" prefWidth="500.0" spacing="20.0" style="-fx-background-color: F3BBAF;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.A7.ProgramChooserController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="Select a program" textFill="#d47a7a">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Label>
      <ListView fx:id="programsListView" prefHeight="337.0" prefWidth="442.0" style="-fx-background-color: ACE3D3;">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </ListView>
      <Button fx:id="displayButton" alignment="BASELINE_CENTER" mnemonicParsing="false" onAction="#displayProgram" prefHeight="37.0" prefWidth="137.0" style="-fx-border-radius: 15px; -fx-background-radius: 15px;" text="Display program" textAlignment="CENTER" textFill="#509486">
         <font>
            <Font name="Arial Bold" size="13.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
